extend layout/layout.pug

block content
    section.section
        .container
            .content
                // Table Of Contents
                include content/table_of_contents/operating_systems.pug

                h2.title.is-2#title-operating-systems Operating Systems
                h3.title.is-3#title-operating-systems-maintained Maintained
                article
                    include content/operating_systems/maintained.pug
                    script(src='js/tablefilter/operating_systems/maintained.js')
        
                h3.title.is-3#title-operating-systems-no-more-maintained No more maintained
                article
                    include content/operating_systems/no_more_maintained.pug
                    script(src='js/tablefilter/operating_systems/no_more_maintained.js')
        
                h3.title.is-3#title-operating-systems-project-transferred Project transferred
                article
                    include content/operating_systems/project_transferred.pug
                    script(src='js/tablefilter/operating_systems/project_transferred.js')

block hero-foot
    .hero-foot
        nav.tabs.is-boxed.is-fullwidth
            .container
                ul
                    li
                        a(href='index.html') Overview
                    li
                        a(href='tools.html') Tools
                    li
                        a(href='resources.html') Resources
                    li
                        a(href='ctf_platforms.html') CTF platforms
                    li.is-active
                        a(href='operating_systems.html') Operating Systems

block optional-script-top
    // TableFilter lib
    script(src='js/vendor/tablefilter/tablefilter.js')
    // TableFilter base config for all tables
    script(src='js/tablefilter/base_config.js')

block optional-script-bottom
    // Apply font-mfizz class to elements when available (need to be loaded after the content)
    script(src='js/auto-font-mfizz.js')
